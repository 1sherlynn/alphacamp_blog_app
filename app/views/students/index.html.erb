<h1>List of all Student Records</h1>
 
<table class="table table-hover">
  
  <thead>
  <tr>
    <th>Name</th>
    <th>Birthdate</th>
    <th>Email</th>

    <th>Time Created</th>
  </tr>
  </thbook


 <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= student.name %></td>
      <td><%= student.birthdate %></td>
      <td><%= student.email %></td>

      <td><%= student.created_at.strftime("%d-%b-%Y, %l:%M%P") %></td>

      <td><%= link_to 'Show', student_path(student), class: 'btn btn-success btn-xs' %></td>


      <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-info btn-xs' %></td>


      <td><%= link_to 'Destroy', student_path(student),
      class: 'btn btn-danger btn-xs',
              method: :delete,
              data: { confirm: 'Sure you wanna destroy?'} %> </td>
    </tr>
  <% end %>
  </tbody>

</table>

<br>
<%= link_to new_student_path, class: 'btn btn-warning' do %>
 <i class="glyphicon glyphicon-plus"></i> New Post
<% end %>
