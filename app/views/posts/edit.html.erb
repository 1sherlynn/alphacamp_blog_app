<h1>Edit post</h1>
 


<%= form_for @post, url: post_path do |f| %>

 <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>


<% end %>

<br>
<br>
<%= link_to posts_path, class: 'btn btn-warning' do %>
 <i class="glyphicon glyphicon-home"></i> Back 
<% end %>

