<h1>List of all Posts</h1>
 
<table class="table table-hover">
  
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Text</th>
    <th>Time-created</th>
  </tr>
  </thead>


 <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.author %></td>
      <td><%= post.text %></td>
      <td><%= post.created_at %></td>
      <td><%= link_to 'Show', post_path(post), class: 'btn btn-success btn-xs' %></td>
      <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-info btn-xs' %></td>
      <td><%= link_to 'Destroy', post_path(post),
      class: 'btn btn-danger btn-xs',
              method: :delete,
              data: { confirm: 'Sure you wanna destroy?'} %></td>
    </tr>
  <% end %>
  </tbody>

</table>

<br>
<%= link_to 'New Post', new_post_path, class: 'btn btn-warning' %>
